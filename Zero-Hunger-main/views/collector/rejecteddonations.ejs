<main>
    <%- include('../partials/collectorSidebar') %>

    <div id="main-wrapper">

        <div class="bg-white shadow-sm p-3">
            <span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
            <h5 class="m-0 color-theme d-inline-block">Rejected Donations</h5>
        </div>

        <div class="m-4">
            <% for(let i=0; i<rejectedDonations.length; i++) { %>
                <div class="bg-white mb-4 p-4 shadow-sm">
                    <div class="mb-2">
                        <span>Food type:</span>
                        <span><%= rejectedDonations[i].foodType %></span>
                    </div>

                    <div class="mb-2">
                        <span>Quantity:</span>
                        <span><%= rejectedDonations[i].quantity %></span>
                    </div>

                    <div class="mb-2">
                        <span>Address given:</span>
                        <span><%= rejectedDonations[i].address %></span>
                    </div>

                    <div class="mb-2">
                        <span>Phone given:</span>
                        <span><%= rejectedDonations[i].phone %></span>
                    </div>

                    <div class="mb-2">
                        <span>Time of cooking:</span>
                        <span><%= rejectedDonations[i].cookingTime.toLocaleString("en-IN", { dateStyle: "medium", timeStyle: "short"}) %></span>
                    </div>

                    <div class="mb-2">
                        <span>Status:</span>
                        <span class="text-rejected">This donation has been rejected</span>
                    </div>

                    <div class="mb-2">
                        <a class="btn" href="/collector/undoReject/<%= rejectedDonations[i]._id %>">Undo Reject</a>
                    </div>
                </div>
            <% } %>
        </div>

    </div>
</main>
