<main>
    <%- include('../partials/collectorSidebar') %>

    <% for (let i = 0; i < assignedDonations.length; i++) { %>
        <div class="bg-white mb-4 p-4 shadow-sm">
            <div class="mb-2">
                <span>Food type:</span>
                <span><%= assignedDonations[i].foodType %></span>
            </div>
            <div class="mb-2">
                <span>Quantity:</span>
                <span><%= assignedDonations[i].quantity %></span>
            </div>
            <div class="mb-2">
                <span>Address given:</span>
                <span><%= assignedDonations[i].address %></span>
            </div>
            <div class="mb-2">
                <span>Phone given:</span>
                <span><%= assignedDonations[i].phone %></span>
            </div>
            <div class="mb-2">
                <span>Time of cooking:</span>
                <span><%= assignedDonations[i].cookingTime.toLocaleString("en-IN", { dateStyle: "medium", timeStyle: "short"}) %></span>
            </div>
            <div class="mb-2">
                <span>Status:</span>
                <span class="text-assigned">Assigned to you for collection</span>
            </div>
            <div class="mb-2">
                <span>Donor Name:</span>
                <span><%= assignedDonations[i].donor ? assignedDonations[i].donor.firstName : 'No Donor Info' %></span>
            </div>
            <div class="mb-2">
                <span>Agent Name:</span>
                <span><%= assignedDonations[i].agent ? assignedDonations[i].agent.firstName : 'No Agent Info' %></span>
            </div>
        </div>
    <% } %>
</main>
